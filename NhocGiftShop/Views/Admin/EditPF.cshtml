
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    NhocGiftShop.Models.ViewModel.ProductFormatView pf = null;
    if (TempData["pf"] != null)
    {
        pf = (NhocGiftShop.Models.ViewModel.ProductFormatView)TempData["pf"];
    }
}
@if (pf != null)
{
    <a href="@Url.Action("ListPF", new { idPro=pf.idPro})" class="btn btn-sm btn-info" style="background-color:#4e73df;font-size:20px;float:right;">
        <i class="fa fa-arrow-right"></i>
    </a>
    <section class="panel" style="margin-top:55px;">
        <header class="panel-heading">
            Edit Format Product
        </header>
        <form action="@Url.Action("UpdatePF")" method="POST" enctype="multipart/form-data">
            <div class="panel-body">
                <div class="position-center">
                    <form role="form">
                        <div class="form-group">
                            <input type="hidden" name="idPF" value="@pf.idPF" />
                            <input type="hidden" name="idPro" value="@pf.idPro" />
                            <label for="">Product Name: @pf.namePro</label>
                        </div>
                        <div class="form-group">
                            <label for="">Price:</label>
                            <input type="number" class="form-control" name="price" value="@pf.price" maxlength="10" />
                        </div>
                        <div class="form-group">
                            <label for="">Size:</label>
                            <input type="text" class="form-control" name="size" value="@pf.size" maxlength="10" />
                        </div>
                        <div class="form-group">
                            <label for="">Display Color:</label>
                            <input type="text" class="form-control" name="colorCSS" value="@pf.colorCSS" maxlength="20" required />
                            <a href="https://hocwebchuan.com/reference/cssSection/css_color.php" target="_blank">Select color online and copy code color</a>
                        </div>
                        <div class="form-group">
                            <label for="">Color Name:</label>
                            <input type="text" class="form-control" name="colorName" maxlength="40" value="@pf.colorName" required>
                        </div>
                        <button type="submit" name="submit" class="btn btn-info">Submit</button>
                    </form>
                </div>
            </div>
        </form>
    </section>
}
@if (TempData["rs"] != null)
{
    <script>
        $(function () {
            $("#msgModal").modal("show");
        });
    </script>
    <div class="modal fade" id="msgModal" tabindex="-1" role="dialog" aria-labelledby="msgModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="margin:auto;">
                <div class="modal-header">
                    <h5 class="modal-title" id="msgModalLabel" style="width:50%; font-size:20px">Notification</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -29px;font-size: 30px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="color: coral;font-size:18px;">
                    @if (((int)TempData["rs"]) == 0)
                    {
                        <label>Create Failed! All value are null.</label>
                    }
                </div>
            </div>
        </div>
    </div>
}


